<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_plain_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/service_id"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request ID" />

        <TextView
            android:id="@+id/service_date"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customer_name"
                style="@style/SimpleTextviewStyle_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Test" />

            <TextView
                android:id="@+id/customer_business"
                style="@style/SimpleTextviewStyle_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Test"
                android:visibility="gone" />

            <TextView
                android:id="@+id/customer_email"
                style="@style/SimpleTextviewStyle_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Test" />

            <TextView
                android:id="@+id/customer_contact"
                style="@style/SimpleTextviewStyle_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:text="Test" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_grey"
            android:visibility="visible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/dark_grey"
            android:visibility="visible" />


        <TextView
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Engineer"
            android:textColor="#AB0800"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_engineer_name"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Test"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/service_engineer_email"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/service_engineer_mobile"
            style="@style/SimpleTextviewStyle_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:background="@color/dark_grey"
            android:visibility="visible" />

        <TextView
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Branch"
            android:textColor="#AB0800"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_branch_name"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Test"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/service_branch_address"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/service_branch_city"
            style="@style/SimpleTextviewStyle_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/service_branch_mobile"
            style="@style/SimpleTextviewStyle_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/service_branch_email"
            style="@style/SimpleTextviewStyle_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_grey"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/SimpleTextviewStyle_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="Status :"
                android:textColor="#AB0800"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_status"
                style="@style/SimpleTextviewStyle_16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Test" />


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_grey"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/showDevie"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/select_border">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp"
                android:text="No of Devices to be served"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/total_devices_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:text="2" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/service_request_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/job_sheet"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Job Sheet" />

        <Button
            android:id="@+id/approve_request"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Approve Request" />

        <Button
            android:id="@+id/reject_request"
            style="@style/Button_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Reject Request" />
    </LinearLayout>
</ScrollView>